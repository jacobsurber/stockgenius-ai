{
  "name": "stockgenius",
  "version": "1.0.0",
  "description": "Single-user stock analysis and trading platform with AI-powered insights",
  "main": "dist/web/index.js",
  "type": "module",
  "scripts": {
    "start": "npm run build && node dist/web/index.js",
    "web": "npm run build && node dist/web/index.js",
    "dev": "concurrently \"npm run dev:watch-build\" \"nodemon --delay 2s dist/web/index.js\"",
    "dev:watch-build": "concurrently \"tsc --watch\" \"nodemon --watch src/web/public --watch src/web/views --ext js,css,html,ejs --exec 'node scripts/copy-assets.js'\"",
    "dev:simple": "npm run build:full && nodemon --watch src --ext ts,js,css,html,ejs --exec \"npm run build:full && node dist/web/index.js\"",
    "dev:port3001": "PORT=3001 npm run dev:simple",
    "prebuild": "node scripts/generate-build-info.js",
    "build": "npm run build:full",
    "build:full": "tsc && node scripts/copy-assets.js",
    "build:dev": "npm run build:full && echo 'Build complete'",
    "copy-assets": "node scripts/copy-assets.js",
    "deploy": "npm run build && node scripts/deploy.js start",
    "deploy:start": "node scripts/deploy.js start",
    "deploy:stop": "node scripts/deploy.js stop",
    "deploy:restart": "npm run build && node scripts/deploy.js restart",
    "deploy:status": "node scripts/deploy.js status",
    "deploy:logs": "node scripts/deploy.js logs",
    "dev:new": "node scripts/start-dev.js",
    "test:server": "node scripts/test-server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop stockgenius",
    "pm2:restart": "pm2 restart stockgenius",
    "pm2:logs": "pm2 logs stockgenius",
    "pm2:status": "pm2 status",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "format": "prettier --write src/",
    "setup": "node scripts/setup.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js"
  },
  "keywords": [
    "stock",
    "trading",
    "finance",
    "ai",
    "single-user",
    "nodejs"
  ],
  "author": "StockGenius",
  "license": "MIT",
  "dependencies": {
    "@types/cheerio": "^0.22.35",
    "@upstash/redis": "^1.35.1",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "redis": "^4.6.10",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.15",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.20",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.7",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "concurrently": "^9.2.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
